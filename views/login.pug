extends layouts/login-layout.pug

block content
    .loginContainer
        h1 Login
        form(method="post")

            p.errorMessage #{errorMessage}

            input(type="text", name="logUsername", placeholder="Username or email", value=logUsername required="" class="nes-input")
            input(type="password", name="logPassword", placeholder="Password", required="" class="nes-input")
            input(type="submit", value="Login" class="nes-btn")

            p 
            a(href="/requestReset") Forgot your password?
        a(href="/register") Need an account? Register here.