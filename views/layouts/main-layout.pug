            .row
                nav.col-2
                    a.blue(href="/") 
                        i.fa-solid.fa-horse
                    a(href="/" title="Home" alt="Home") 
                        i.fa-solid.fa-house
                    a(href="/search" title="Search" alt="Search") 
                        i.fa-solid.fa-search                        
                    a(href="/notifications" title="Notifications" alt="Notifications")  
                        i.fa-solid.fa-bell
                    a(href="/messages" title="Messages" alt="Messages")  
                        i.fa-solid.fa-envelope
                    a(href="/profile" title="Profile" alt="Profile") 
                        i.fa-solid.fa-user
                    a(href="/logout" title="Logout" alt="Logout") 
                        i.fa-solid.fa-right-from-bracket                                               
                .mainSectionContainer.col-10.col-md-8.col-lg-6
                    .titleContainer 
                        h1 #{pageTitle}
                        block headerButton

                    block content

                .d-none.d-md-block.col-md-2.col-lg-4
        #notificationList                    

        script(src='https://kit.fontawesome.com/e0fbe9db39.js', crossorigin='anonymous')
